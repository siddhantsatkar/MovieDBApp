<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saved_mov_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moviedbapphomesdotcom.activities.TopMoviesActivity">

    <TextView
        android:id="@+id/textView_saved_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:text="These are your saved movies"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_saved_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_saved_movie"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:clickable="true"
        android:clipToPadding="false"
        android:contextClickable="true"
        android:orientation="vertical"
        android:outlineProvider="paddedBounds"
        android:scrollbars="vertical" />
</RelativeLayout>
